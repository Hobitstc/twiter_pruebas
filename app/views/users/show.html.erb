<p> <%= @user.name %> </p>

  <div>
    <% if current_user.id != @user.id && @user.followers.find_by(follower_id: current_user.id) %>
      <%= button_to "Unfollow", follower_path(@user.id), method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= button_to "Follow", followers_path(user_id: @user.id), method: :post, class: "btn btn-info" %>
      <%end %>
  </div>


      <div>
        <% @tweets.each do |tweet| %>
          <div>

            <% if current_user.id == tweet.user_id %>
              <%= link_to "EDIT TWEET", edit_tweet_path(tweet.id) %>
            <% end %>

            <% if current_user.id == tweet.user_id %>
              <span><%= link_to "Delete Tweet", tweet, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %> </span>
            <% end %>

            <%= link_to tweet_path(tweet.id) do %>
              <h2><%= tweet.title %> </h2>
            <% end %>

          </div>

          <p><%= link_to tweet.user.email, user_path(tweet.user_id) %></p>


          <p><%= tweet.description %></p>


        <% end %>


      </div>